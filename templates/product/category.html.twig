{% extends "base.html.twig" %}

{% block title %}
	Catégorie :{{ slug }}
{% endblock %}

{% block body %}

	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Home</a>
		</li>
		<li class="breadcrumb-item">
			<a href="#">{{ category.name }}</a>
		</li>
	</ol>
	<h1>Catégorie :{{category.name}}</h1>

	<div class="container">
		<div class="row">
			{% for p in category.products %}
				<div class="col-3">
					{% include("product/_product_card.html.twig") %}
				</div>
			{% endfor %}
		</div>
	</div>


{% endblock %}
