{% extends "base.html.twig " %}

{% block title %}
	Catégorie :{{ slug }}
{% endblock %}

{% block body %}

	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Home</a>
		</li>
		<li class="breadcrumb-item">
			<a href="#">{{ category.name }}</a>
		</li>
	</ol>
	<h1>Catégorie :{{category.name}}</h1>

	<div class="container">
		<div class="row">
			{% for p in category.products %}
				<div class="col-3">
					<div class="card">
						<img src="{{ p.mainPicture }}" class="img-fluid" alt="image du produit">
						<div class="card-body">
							<h4 class="card-title">{{ p.name }}
								<br>{{ p.price / 100 }}
								€</h4>
							<span class="badge badge-info">{{ p.category.name }}</span>
							<p class="card-text">{{ p.shortDescription }}</p>
							<a href="{{ path('product_show', {'category_slug': p.category.slug, 'slug': p.slug }) }}" class="btn btn-primary btn-sm">Détails</a>
							<a href="#" class="btn btn-success btn-sm">ajouter</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>


{% endblock %}
