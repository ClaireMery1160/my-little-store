{% extends 'base.html.twig' %}

{% block title %}
	éditer une catégorie
{% endblock %}

{% block body %}
	<h1>éditer la catégorie
		{# {{ category_name }} #}
		{{ category.name }}
	</h1>

	<div class="container">
		<div class="row">
			<div class="col-6">
				{{ form_start(formView) }}
				{{ form_errors(formView) }}
				{{ form_row(formView.name) }}
				<button class="btn-primary mt-2">éditer la catégorie</button>
				{{ form_end(formView) }}

			</div>
		</div>
	</div>
{% endblock %}
